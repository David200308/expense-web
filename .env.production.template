# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=expense_user
DB_PASSWORD=your_secure_database_password_here
DB_DATABASE=expense_tracker

# MySQL Root Password (for initial setup)
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password_here
MYSQL_PASSWORD=your_secure_database_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production

# Application Configuration
NODE_ENV=production
BACKEND_PORT=3020
FRONTEND_URL=https://your-domain.com

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=expense-tasks

# Scheduler Configuration
SCHEDULER_PORT=3030

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@your-domain.com

# Optional: Additional Security
# ENCRYPTION_KEY=your_encryption_key_here
# API_KEY=your_api_key_here
# KAFKA_PASSWORD=your_kafka_password_here
