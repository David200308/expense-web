{
  "name": "expense-web",
  "version": "1.0.0",
  "description": "Expense Tracker Application - Login with your Web3 Wallet",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "./scripts/start-dev.sh",
    "prod": "./scripts/start-prod.sh",
    "stop:dev": "./scripts/stop-dev.sh",
    "stop:prod": "./scripts/stop-prod.sh",
    "quick": "./scripts/quick-start.sh",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "start": "concurrently \"pnpm --filter frontend start\" \"pnpm --filter backend start:prod\"",
    "scheduler": "cd expense-scheduler && go run main.go",
    "logs": "./scripts/view-logs.sh",
    "logs:follow": "./scripts/view-logs.sh follow",
    "logs:backend": "./scripts/view-logs.sh backend",
    "logs:scheduler": "./scripts/view-logs.sh scheduler",
    "logs:frontend": "./scripts/view-logs.sh frontend",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "clean": "docker-compose down -v && docker system prune -f",
    "clean:dev": "docker-compose -f docker-compose.dev.yml down -v && docker system prune -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "pnpm@10.15.1"
}
